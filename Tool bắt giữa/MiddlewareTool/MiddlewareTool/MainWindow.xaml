<Window x:Class="MiddlewareTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiddlewareTool"
        mc:Ignorable="d"
        Title="Middleware Tool" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">

            <GroupBox Header="Protocol Selection" Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Label Content="Protocol Type:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="ProtocolSelection" Width="120" VerticalAlignment="Center" Margin="5,0,0,0">
                        <ComboBoxItem Content="HTTP" IsSelected="True"/>
                        <ComboBoxItem Content="TCP"/>
                    </ComboBox>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Executable Paths" Margin="0,0,0,10">
                <Grid Margin="0,5,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="Server Executable Path:" VerticalAlignment="Center" />
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="ServerExePath" Margin="5,0" IsReadOnly="True" />
                    <Button Grid.Row="0" Grid.Column="2" Content="Browse..." Padding="10,2" Click="BrowseServer_Click" />

                    <Label Grid.Row="1" Grid.Column="0" Content="Client Executable Path:" VerticalAlignment="Center" Margin="0,5,0,0" />
                    <TextBox Grid.Row="1" Grid.Column="1" x:Name="ClientExePath" Margin="5,5,5,0" IsReadOnly="True" />
                    <Button Grid.Row="1" Grid.Column="2" Content="Browse..." Padding="10,2" Click="BrowseClient_Click" Margin="0,5,0,0" />
                </Grid>
            </GroupBox>

            <GroupBox Header="AppSetting Templates" Margin="0,0,0,10">
                <Grid Margin="0,5,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="Server Template Path:" VerticalAlignment="Center" />
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="AppSettingTemplate" Margin="5,0" IsReadOnly="True" />
                    <Button Grid.Row="0" Grid.Column="2" Content="Browse..." Padding="10,2" Click="BrowseAppSetting_Click" />

                    <Label Grid.Row="1" Grid.Column="0" Content="Client Template Path:" VerticalAlignment="Center" Margin="0,5,0,0" />
                    <TextBox Grid.Row="1" Grid.Column="1" x:Name="AppSettingClientTemplate" Margin="5,5,5,0" IsReadOnly="True" />
                    <Button Grid.Row="1" Grid.Column="2" Content="Browse..." Padding="10,2" Click="BrowseAppSettingClient_Click" Margin="0,5,0,0" />
                </Grid>
            </GroupBox>

            <GroupBox Header="Log File Destination" Margin="0,0,0,10">
                <Grid Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="Excel Log File Path:" VerticalAlignment="Center" />
                    <TextBox Grid.Column="1" x:Name="ExcelLogPath" Margin="5,0" IsReadOnly="True" />
                    <Button Grid.Column="2" Content="Select File..." Padding="10,2" Click="SelectLogFile_Click" />
                </Grid>
            </GroupBox>

            <GroupBox Header="Prompt Configuration " Margin="0,0,0,10">
                <Grid Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="Prompts File Path:" VerticalAlignment="Center" />
                    <TextBox Grid.Column="1" x:Name="PromptFilePath" Margin="5,0" IsReadOnly="True" />
                    <Button Grid.Column="2" Content="Select File..." Padding="10,2" Click="BrowsePrompts_Click" />
                </Grid>
            </GroupBox>
        </StackPanel>

        <Button Grid.Row="1" x:Name="StartStopButton" Content="Start Grading Session"
                FontSize="16" FontWeight="Bold" Padding="10" Click="StartStop_Click" />

        <DataGrid Grid.Row="2" x:Name="RequestsGrid" AutoGenerateColumns="False"
                  IsReadOnly="True" Margin="0,10,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Time" Binding="{Binding Timestamp}" Width="150" />
                <DataGridTextColumn Header="Method/Direction" Binding="{Binding Method}" Width="120" />
                <DataGridTextColumn Header="URL/Data" Binding="{Binding Url}" Width="*" />
                <DataGridTextColumn Header="Status/Bytes" Binding="{Binding StatusCode}" Width="100" />
                <DataGridTemplateColumn Header="View Data">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="View" Click="ViewButton_Click" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>